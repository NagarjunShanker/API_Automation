	public static String addBook(String ibnValue, String aisleNum) {
		return "{\r\n"
				+ "\r\n"
				+ "\"name\":\"Learn Appium Automation with Java\",\r\n"
				+ "\"isbn\":\""+ibnValue+"\",\r\n"
				+ "\"aisle\":\""+aisleNum+"\",\r\n"
				+ "\"author\":\"John foe\"\r\n"
				+ "}\r\n"
				+ "";
	}
	
	public static String deleteBook(String id) {
		return "{\r\n"
				+ " \r\n"
				+ "\"ID\" : \""+id+"\"\r\n"
				+ " \r\n"
				+ "} \r\n"
				+ "";
	}
	
	/*
	 * this methods returns the body of the create a bug api call
	 * returns String of the body
	 */
	public static String createBug(String projectKey, String summary, String description, String reporterID) {
		return "{\r\n"
				+ "    \"fields\": {\r\n"
				+ "        \"project\":{\r\n"
				+ "            \"key\":\""+projectKey+"\"\r\n"
				+ "        },\r\n"
				+ "        \"summary\": \""+summary+"\",\r\n"
				+ "        \"description\": {\r\n"
				+ "            \"type\": \"doc\",\r\n"
				+ "            \"version\": 1,\r\n"
				+ "            \"content\": [\r\n"
				+ "                {\r\n"
				+ "                \"type\": \"paragraph\",\r\n"
				+ "                \"content\": [\r\n"
				+ "                    {\r\n"
				+ "                    \"type\": \"text\",\r\n"
				+ "                    \"text\": \""+description+"\"\r\n"
				+ "                    }\r\n"
				+ "                ]\r\n"
				+ "                }\r\n"
				+ "            ]\r\n"
				+ "            },\r\n"
				+ "            \"issuetype\": {\r\n"
				+ "                \"name\": \"Bug\"\r\n"
				+ "            },\r\n"
				+ "            \"reporter\": {\r\n"
				+ "                \"id\": \""+reporterID+"\"\r\n"
				+ "            }\r\n"
				+ "    }\r\n"
				+ "}";
	}
}
